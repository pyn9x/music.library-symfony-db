{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid d-flex h-100 justify-content-center align-items-center p-0" style="display: flex; flex-wrap: wrap;">
        {% for performer in performers %}
            <div class="card" style="width: 18rem;">
                <img style="height: 250px; width: 250px; display: block; margin-left: auto; margin-right: auto" src="uploads/cover/{{ performer.cover }}" alt="Card image cap">
                <div class="card-body">
                    <a href="{{ path('performer_details', {id: performer.id}) }}" class="card-title">{{ performer.name }}, {{ performer.surname}}</a> <br>
                    <b>Жанры: </b>
                    {% for role in performer.role %}
                        {{ role.name }}
                    {% endfor %}
                    <div class="card-text text-truncate"><b>Дата создания:</b> {{ performer.birthday | date('d-m-Y') }}</div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
