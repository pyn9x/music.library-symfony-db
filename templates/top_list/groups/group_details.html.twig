{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <img class="card-img-left rounded float-left" style="height: 200px; width: 250px; display: block; margin-left: auto; margin-right: auto" src="/uploads/cover/{{ group.cover }}" alt="{{ group.cover }}">
        <div class="card" style="height: 200px;">
            <div class="card-body">
                <h5 class="card-title"><b>{{ group.name }}</b></h5>
                <p class="card-text">{{ group.info }}</p>
                <b>Состав:</b>
                {% for performer in group.performer %}
                    <a href="{{ path('performer_details', {id: performer.id}) }}" class="card-title" > {{ performer.name }}, {{ performer.surname }}</a>;
                {% endfor %} <br>
                <b>Жанры: </b>
                {% for genre in group.genre %}
                    {{ genre.name }}
                {% endfor %}
            </div>
        </div>
        <div class="container-fluid d-flex h-100 justify-content-center align-items-center p-0" style="display: flex; flex-wrap: wrap;">
            {% for album in group.album %}
                <div class="card" style="width: 18rem;">
                    <img style="height: 250px; width: 250px; display: block; margin-left: auto; margin-right: auto" src="/uploads/cover/{{ album.cover }}" alt="Card image cap">
                    <div class="card-body">
                        <a href="{{ path('albums_details', {id: album.id}) }}" class="card-title">{{ album.name }}</a> <br>
                        <b>Жанры: </b>
                        {% for genre in group.genre %}
                            {{ genre.name }}
                        {% endfor %}
                        <div class="card-text text-truncate"><b>Дата создания:</b> {{ album.releasedate|date('d-m-Y') }}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
